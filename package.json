{
  "name": "ditox",
  "description": "Detoxed dependency injection for JS, Typescript and Flow.",
  "version": "0.3.0",
  "license": "MIT",
  "author": {
    "name": "Mikhail Nasyrov",
    "email": "mikhail@mnasyrov.com",
    "url": "https://github.com/mnasyrov"
  },
  "homepage": "https://github.com/mnasyrov/ditox",
  "bugs": "https://github.com/mnasyrov/ditox/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/mnasyrov/ditox.git"
  },
  "keywords": [
    "functional",
    "dependency",
    "injection",
    "ioc"
  ],
  "engines": {
    "node": ">=12"
  },
  "type": "module",
  "main": "dist/ditox.js",
  "module": "dist/ditox.module.js",
  "jsnext:main": "dist/ditox.module.js",
  "unpkg": "dist/ditox.umd.js",
  "umd:main": "dist/ditoc.umd.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "start": "microbundle watch",
    "clean": "shx rm -rf dist",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint src",
    "lint:tsc": "tsc --noEmit",
    "lint:flow": "flow check",
    "test": "jest",
    "build": "npm-run-all build:*",
    "build:compile": "microbundle build --name Ditox --format cjs,es,umd",
    "build:flow": "shx cp src/index.js.flow dist/ditox.js.flow",
    "preversion": "npm-run-all -s build lint test",
    "prepare": "npm run clean && npm run build",
    "markdown-toc": "npx markdown-toc -i README.md"
  },
  "devDependencies": {
    "@babel/cli": "7.12.1",
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.12.1",
    "@babel/plugin-proposal-optional-chaining": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-flow": "7.12.1",
    "@types/jest": "26.0.14",
    "@size-limit/preset-small-lib": "4.6.0",
    "@typescript-eslint/parser": "4.3.0",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "babel-jest": "26.6.2",
    "eslint": "7.10.0",
    "eslint-plugin-jest": "24.1.0",
    "flow-bin": "0.137.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lint-staged": "10.4.0",
    "microbundle": "0.12.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "shx": "0.3.3",
    "size-limit": "4.6.0",
    "tslib": "2.0.1",
    "ts-jest": "26.4.1",
    "typescript": "4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{ts,css,json,md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
