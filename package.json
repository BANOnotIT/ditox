{
  "name": "ditox",
  "version": "0.3.2",
  "description": "Detoxed dependency injection for JS, Typescript and Flow.",
  "license": "MIT",
  "author": "Mikhail Nasyrov <mikhail@mnasyrov.com> (https://github.com/mnasyrov)",
  "homepage": "https://github.com/mnasyrov/ditox",
  "bugs": "https://github.com/mnasyrov/ditox/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/mnasyrov/ditox.git"
  },
  "keywords": [
    "functional",
    "dependency",
    "injection",
    "ioc"
  ],
  "engines": {
    "node": ">=12"
  },
  "type": "module",
  "main": "dist/ditox.js",
  "module": "dist/ditox.module.js",
  "jsnext:main": "dist/ditox.module.js",
  "unpkg": "dist/ditox.umd.js",
  "umd:main": "dist/ditox.umd.js",
  "browser": "dist/ditox.browser.js",
  "react-native": "dist/ditox.browser.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "sideEffects": false,
  "files": [
    "docs",
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint src",
    "lint:tsc": "tsc --noEmit",
    "lint:flow": "flow check",
    "test": "jest",
    "build": "npm-run-all build:*",
    "build:rollup": "rollup -c",
    "build:flow-js": "shx cp src/index.js.flow dist/ditox.js.flow",
    "build:flow-cjs": "shx cp src/index.js.flow dist/ditox.cjs.flow",
    "build:flow-browser": "shx cp src/index.js.flow dist/ditox.browser.js.flow",
    "build:flow-umd": "shx cp src/index.js.flow dist/ditox.umd.js.flow",
    "watch": "rollup -c --watch",
    "preversion": "npm-run-all -s build lint test",
    "prepare": "npm run clean && npm run build",
    "docs": "npm-run-all docs:*",
    "docs:typedoc": "typedoc",
    "docs:markdown-toc": "markdown-toc -i README.md"
  },
  "devDependencies": {
    "@babel/cli": "7.12.1",
    "@babel/core": "7.12.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.12.1",
    "@babel/plugin-proposal-optional-chaining": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-flow": "7.12.1",
    "@rollup/plugin-commonjs": "16.0.0",
    "@types/jest": "26.0.14",
    "@typescript-eslint/parser": "4.3.0",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@wessberg/rollup-plugin-ts": "1.3.8",
    "babel-jest": "26.6.2",
    "eslint": "7.10.0",
    "eslint-plugin-jest": "24.1.0",
    "flow-bin": "0.137.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "lint-staged": "10.4.0",
    "markdown-toc": "1.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "rollup": "2.33.1",
    "rollup-plugin-terser": "7.0.2",
    "shx": "0.3.3",
    "tslib": "2.0.3",
    "ts-jest": "26.4.1",
    "typedoc": "0.19.2",
    "typedoc-plugin-markdown": "3.0.11",
    "typescript": "4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{ts,css,json,md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
