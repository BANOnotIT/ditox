{
  "$schema": "https://typedoc.org/schema.json",

  "plugin": ["typedoc-plugin-extras", "typedoc-plugin-replace-text"],

  "entryPointStrategy": "packages",
  "entryPoints": ["packages/ditox", "packages/ditox-react"],
  "exclude": ["**/*.test.ts"],
  "out": "build/docs",

  "name": "Ditox.js",
  "cname": "ditox.js.org",
  "visibilityFilters": {},
  "navigationLinks": {
    "GitHub": "https://github.com/mnasyrov/ditox"
  },
  "media": "media",

  "customDescription": "Dependency injection for modular web applications",
  "favicon": "media/lemon.svg",
  "replaceText": {
    "replacements": [
      {
        "pattern": "src=\"../../media/",
        "replace": "src=\"/media/"
      }
    ]
  }
}
